{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./typings"]
    },
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": false
}
