.culture-screen
  background: #333;
  border-top: 4px solid #C41B7E;
  h2
    background: #C41B7E;
    color: #eee;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;

.culture-metrics
  display: flex;
.culture-wrapper
  background: #222;
  border: 1px solid #111;
  border-radius: 4px;
  color: #eee;
  margin: .1rem auto;
  padding: .25rem;
  text-align: center;
  width: 15rem;
