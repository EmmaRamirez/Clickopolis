.culture-screen
  background: #333;
  border-top: 4px solid #C41B7E;
  transition: 200ms background;
  &.expanded
    background: rgba(#222, 0.95);
    box-shadow: 0 0 4px rgba(#444, 0.4);
    border-radius: .5rem;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    padding: 2rem;
    padding-top: 1rem;
    position: fixed;
    top: 5%;
    left: 5%;
    width: 90%;
    height: 90%;
    //transition: 200ms all;
    z-index: 200;
    .culture-expand
      right: 3rem;
    .culture-card
      height: 16rem;
      width: 10.75rem;
  h2
    background: #C41B7E;
    color: #eee;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;

.culture-metrics
  display: flex;
.culture-wrapper
  background: #222;
  border: 1px solid #111;
  border-radius: 4px;
  color: #eee;
  margin: .1rem auto;
  padding: .25rem;
  text-align: center;
  width: 15rem;
  
.culture-expand
  cursor: pointer;
  position: absolute;
  top: 2rem;
  right: 2rem;
  
.culture-cards,
.selected-culture-cards
  padding: .5rem;
.selected-culture-cards
  align-items: center;
  display: flex;
  justify-content: center;
  .culture-card
    margin: .25rem;
    padding: 1rem;
.culture-cards
  height: 60%;
  padding: 0;
  overflow-y: auto;
  &::-webkit-scrollbar
    width: 4px;
    height: 4px;
  &::-webkit-scrollbar-button
    width: 0px;
    height: 0px;
  &::-webkit-scrollbar-thumb
    background: #525252;
    border: 0px none #ffffff;
.culture-card
  align-items: center;
  align-content: center;
  background: #C41B7E;
  border: 2px solid rgba(black, 0.4);
  background: linear-gradient(to bottom, white, #ddd, white);
  border-radius: 4px;
  color: #333;
  display: inline-flex;
  flex-flow: column;
  height: 11rem;
  justify-content: flex-start;
  margin: .25rem;
  padding: .5rem;
  position: relative;
  transition: 300ms opacity;
  width: 7.85rem;    
  &[data-type='military']
    border-color: rgba(#DB1818, 0.7);
  &[data-type='diplomacy']
    border-color: rgba(#F57F2C, 0.7);
  &[data-type='economy']
    border-color: rgba(#A0D190, 0.7);
  &[data-type='faith']
    border-color: #fff;
  &[data-unlocked='false']
    cursor: pointer;
    opacity: 0.7;
    transition: 300ms opacity;
  &[data-unlocked='true']
    cursor: -webkit-grab;
    transition: 300ms opacity;
  &[data-active='true']
    border-style: dotted;
  .culture-card-name
    border-bottom: 1px dashed #333;
    font-weight: bold;
    margin-bottom: 1rem;
  .culture-card-description
    font-size: .8rem;
  .culture-card-cost
    //background: #C41B7E;
    border: inherit;
    border-radius: 4px;
    bottom: .25rem;
    align-self: stretch;
    color: #222;
    padding: .25rem;
    position: absolute;
    text-align: center;
  &.empty
    background: #262626;
    border: 1px dashed #666;
    color: white;
    justify-content: center;
