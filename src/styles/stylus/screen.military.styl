.military-screen
  background: #333;
  border-top: 4px solid #DB1818;
  width: 800px !important;
  h2
    background: #DB1818;
    color: #eee;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;
  .military-metrics
    display: flex;
    justify-content: space-between;
  .military-metric
    background: #222;
    color: #eee;
    border: 1px solid #111;
    border-radius: 4px;
    display: inline-block;
    margin-right: .5rem;
    padding: .5rem;
  h3
    font-weight: light;
    color: #eee;
  &.disabled
    opacity: 0.3;
    pointer-events: none;
  .soldier-assignment
    border: 1px solid #111;
    border-radius: 2px;
    background: #222;
    color: #eee;
    font-size: .9rem;
    margin-bottom: .25rem;
    padding-left: .5rem;
    &.assignment-total
      background: #efefef;
      color: #444;
      input
        background: #fff;
      .base-stats
        display: none;
      .cummulative-stats
        background: #eee;
        color: #222;
        width: 15rem;
    .unit-name
      display: inline-block;
      width: 7rem;
    .base-stats,
    .cummulative-stats
      display: inline-block;
      padding: .25rem 1.5rem;
      text-align: center;
      width: 10rem;   
    .cummulative-stats
      background: #666;
      width: 12rem;
    .unit-upkeep
      font-size: .7rem;
      padding-left: .5rem;
    input
      background: #555;
      border: 1px solid #333;
      width: 4rem;
      text-align: center;
    img
      vertical-align: baseline;