.military-screen
  background: #333;
  border-top: 4px solid #DB1818;
  h2
    background: #DB1818;
    color: #eee;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;
  .military-metrics
    display: flex;
    justify-content: space-between;
  .military-metric
    background: #222;
    color: #eee;
    border: 1px solid #111;
    border-radius: 4px;
    display: inline-block;
    margin-right: .5rem;
    padding: .5rem;
  h3
    color: #eee;
  &.disabled
    opacity: 0.3;
    pointer-events: none;