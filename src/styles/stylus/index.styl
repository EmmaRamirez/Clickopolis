$b = rgba(black, 0.5);

body
  background: #222;
  background-size: cover;
  background-image: url('../img/world-map.svg');
  font-family: 'Roboto', 'Arial', 'Helvetica', sans-serif;

[data-tooltip]
  cursor: default;

.tooltip
  all: initial;
  background: #222;
  border: 1px solid #111;
  color: #eee;
  font-family: 'Roboto';
  font-size: .9rem;
  padding: .25rem;
  position: fixed;
  z-index: 100;


.overlay
  background: rgba(0, 0, 0, 0.9);
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;

.modal-era
  background-size: cover;
  h1
    color: white;
    text-shadow: 0 0 1rem $b;

.era-Classical
  background-image: linear-gradient(to left, $b, $b), url('../img/classical.jpg') !important;

section
  z-index: 2;

.clickopolis-start
  z-index: 10;
  h1
    font-size: 3rem;
    margin: .5rem;
    text-transform: uppercase;

.modal,
.clickopolis-intro,
.clickopolis-start
  background-color: #222;
  background-image: linear-gradient(to bottom, rgba(black, 0.5), rgba(black, 0.5)), url('../img/world-map.svg');
  background-position: center center;
  background-size: cover;
  border-radius: 4px;
  color: #444;
  left: calc(50% - 20rem);
  height: 30rem;
  margin: 0 auto;
  max-width: 40rem;
  min-width: 40rem;
  padding: 2rem;
  position: absolute;
  text-align: center;
  top: calc(50% - 15rem);

.clickopolis-new-game
  background-color: #262626;
  border-radius: 4px;
  color: #eee;
  left: calc(50% - 30rem);
  height: 50rem;
  margin: 0 auto;
  max-width: 60rem;
  min-width: 60rem;
  padding: 2rem;
  position: absolute;
  top: calc(50% - 25rem);
  .clickopolis-new-game-inner
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
  .half-section
    flex: 1;
    padding: 1rem;
  hr
    border: 1px solid #333;
  input, select
    border: 1px solid #111;
    border-radius: 4px;
    color: #222;
    display: block;
    font-size: 1.25em;
    margin-bottom: .5rem;
    padding: .5em;
    width: 260px;
  label
    color: #666;
    font-size: .9em;
    text-align: right;
  input[type='color']
    padding: 0;
    width: 2rem;
  .leader-display
    border: 1px solid #333;
    border-radius: 4px;
    margin: 0 2rem;
    padding: 1rem;
    h3
      color: #666;
      text-align: center;
  .trait-info
    background: #333;
    border-radius: 4px;
    color: #eee;
    font-size: 1.25rem;
    margin: .25rem;
    padding: .5em;
    img
      height: 1.75rem;
    span
      margin-left: .5rem;
      vertical-align: middle;
  .leader-image
    height: 128px;
    border-radius: 50%;
    margin: 0 auto;
    margin-left: calc(50% - 64px);
    position: relative;
    width: 128px;
  .begin-btn
    border-radius: 0;
    display: block;
    font-size: 2rem;
    margin: 1rem auto;
    padding: .3em;
  #color
    display: inline-block;
    vertical-align: top;
  .color-field
    background: white;
    cursor: pointer;
    border-radius: 4px;
    display: inline-block;
    height: 46px;
    width: 46px;
  .color-field-inner
    background: #5fe49b;
    margin: 8px;
    height: 30px;
    width: 30px;



.clickopolis
  height: 90%;
