.faith-screen
  background: #333;
  border-top: 4px solid #ddd;
  h2
    background: #ddd;
    color: #666;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;
  .faith-PM-wrapper
    background: #222;
    border: 1px solid #111;
    border-radius: 4px;
    color: #eee;
    margin: 0 auto;
    padding: .25rem;
    text-align: center;
    width: 15rem;
  .fb-container
    margin: 1rem;
  .faith-bonus
    background: #eee;
    border-radius: 4px;
    cursor: pointer;
    margin: .25rem;
    padding: .5rem;
    &:hover
      background: #FFFFE0;
    .faith-bonus-name
      text-align: center;
