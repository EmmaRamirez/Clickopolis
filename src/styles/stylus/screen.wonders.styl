.wonders-screen
  background: #333;
  border-top: 4px solid darken(#D6CA3E, 10%);
  h2
    background: darken(#D6CA3E, 10%);
    color: #eee;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;
  .wonder
    background: rgba(#222, 0.9);
    border: 1px solid #111;
    border-radius: 4px;
    color: #eee;
    margin: .5rem;
    padding: .5rem;
  .wonder-image img
    height: 2rem;
