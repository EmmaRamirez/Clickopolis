.wonders-screen
  background: #333;
  border-top: 4px solid darken(#D6CA3E, 10%);
  h2
    background: darken(#D6CA3E, 10%);
    color: #eee;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;
  .wonder
    background: rgba(#222, 0.9);
    border: 1px solid #111;
    border-radius: 4px;
    color: #eee;
    margin: .5rem;
    padding: .5rem;
    &[data-visible='false']
      display: none;
    &[data-enabled='false']
      pointer-events: none;
      opacity: 0.5;
  .wonder-progress-bar
    background: #222;
    border: 1px solid #111;
    border-radius: 4px;
    height: .5rem;
    width: 100%;
  .wonder-image img
    height: 3rem;
    margin-left: 2rem;
  .btn-build-wonder
    background: darken(#D6CA3E, 10%);
    border: 1px solid #222;
    border-radius: 4px;
    color: #222;
    cursor: pointer;
    display: inline-block;
    padding: .25rem;
    text-align: center;
    width: 95%;
    &:hover
      background: darken(#D6CA3E, 20%);
  .wonder-image, .wonder-info
    display: inline-block;
  .wonder-info
    max-width: 70%;
    padding-left: 1rem;
  .wonder-name
    font-size: 1.25rem;
    font-weight: bold;
  .wonder-image
    border-right: 1px solid #111;
    width: 8rem;
