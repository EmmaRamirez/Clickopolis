.settings-screen
  background: #333;
  border-top: 4px solid black;
  h2
    background: black;
    color: #eee;
    margin: .25rem .25rem 1.25rem .25rem;
    padding: 1rem;
    img
      background: white;
      border: 4px solid white;
      border-radius: 50%;
  .settings-screen-inner
    color: white;
  p
    display: flex;
    border: 1px solid black;
    flex-wrap: wrap;
    margin: .25rem auto;
  .settings-label
    background: #222;
    display: inline-block;
    width: 8rem;
    padding: .5rem;
    text-align: center;
  .ui-button
    display: inline-block;
    padding: .5rem;
    input[type='checkbox']
      margin-right: 0.5rem;
      background: grey;
      -webkit-appearance: none;
      width: 1rem;
      height: 1rem;
      border: 1px solid black;
      vertical-align: middle;
      &:checked
        background: $blue;
    &:hover
      cursor: pointer;
      background: $blue;
  .horizontal-button,
  .grid-button
    background: transparent;
